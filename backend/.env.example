# Variables de entorno para el backend
# Copia este archivo a .env y configura tus valores

# MongoDB Cloud Connection String
MONGODB_URI=mongodb+srv://usuario:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority

# Puerto del servidor (opcional, por defecto 5000)
PORT=5000

# JWT Secret para autenticaci√≥n (REQUERIDO - cambiar por un valor seguro)
JWT_SECRET=tu_jwt_secret_super_seguro_aqui

# CORS Origin para el frontend (opcional, por defecto http://localhost:3000)
CORS_ORIGIN=http://localhost:3000
