{
  "name": "mern-collections-manager",
  "version": "1.0.0",
  "description": "Aplicaci√≥n MERN para gestionar colecciones de MongoDB Cloud",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "install-server": "cd backend && npm install",
    "install-client": "cd frontend && npm install",
    "install-all": "npm install && npm run install-server && npm run install-client",
    "heroku-postbuild": "npm run install-all && npm run build",
    "render-build": "npm run install-server",
    "render-start": "cd backend && npm start"
  },
  "keywords": [
    "mern",
    "mongodb",
    "express",
    "react",
    "nodejs"
  ],
  "author": "jfontecha",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
